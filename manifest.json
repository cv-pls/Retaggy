{
  "name": "Re[tag]",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Retag questions on StackOverflow.com",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "page_action": {
    "default_title": "Re[tag]",
    "default_icon": "icons/19.png",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://stackoverflow.com/*"
      ],
      "js": [
        "content/main.js",
        "content/retagger.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "permissions": [
    "tabs",
    "http://stackoverflow.com/*",
    "https://stackoverflow.com/*",
    "http://*.stackoverflow.com/*",
    "https://*.stackoverflow.com/*",
    "http://api.stackexchange.com/*"
  ]
}